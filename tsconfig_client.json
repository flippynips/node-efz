
{
  "compileOnSave": false,
  "exclude": [
    "node_modules",
    "./src/Server"
  ],
  "include": [
    "./src/**/*"
  ],
  "compilerOptions": {
    "experimentalDecorators": true,
    "removeComments": true,
    "skipLibCheck": true,
    "allowUnreachableCode": true,
    "module": "commonjs",
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "bin/Client",
    "baseUrl": ".",
    "lib": [
      "es2015",
      "es2016",
      "es2017"
    ],
    "paths": {
      "*": [
        "node_modules/*",
        "src/types/*"
      ]
    }
  }
}

