
{
  "compileOnSave": false,
  "exclude": [
    "./../../node_modules/**/*",
    "./../Client/**/*"
  ],
  "include": [
    "./**/*"
  ],
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "removeComments": false,
    "skipLibCheck": true,
    "allowUnreachableCode": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "outDir": "./../../bin/Server",
    "baseUrl": ".",
    "lib": [
      "es2015",
      "es2016",
      "es2017"
    ],
    "paths": {
      "*": [
        "./../../node_modules/*",
        "./types/*"
      ]
    }
  }
}

